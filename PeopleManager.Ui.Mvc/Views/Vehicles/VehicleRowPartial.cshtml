@model Vehicle

<tr>
    <td>@Model.LicensePlate</td>
    <td>@Model.Brand</td>
    <td>@Model.Type</td>
    <td>
        @if (Model.ResponsiblePerson is not null)
        {
            @: @Model.ResponsiblePerson.FirstName @Model.ResponsiblePerson.LastName
        }
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <button type="button" 
                class="btn btn-danger" 
                data-bs-toggle="modal" 
                data-bs-target="#deleteModal"
                data-id="@Model.Id"
                data-role="delete">
            Delete with modal
        </button>
    </td>
</tr>