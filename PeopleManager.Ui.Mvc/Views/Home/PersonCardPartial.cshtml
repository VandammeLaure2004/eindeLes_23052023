@model Person

<div class="card">
    <div class="card-header">
        <a asp-action="Detail" asp-route-id="@Model.Id">
            <h2>@Model.FirstName @Model.LastName</h2>
        </a>
    </div>
    <div class="card-body">
        <a class="btn btn-outline-primary" href="mailto:@Model.Email">Contact</a>
    </div>
</div>